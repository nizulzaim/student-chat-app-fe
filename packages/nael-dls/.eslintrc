{
  "root": true,
  "extends": ["@nuxt/eslint-config"],
  "overrides": [
    {
      // These pages are not used directly by users so they can have one-word names.
      "files": [
        "**/components/**/*.{js,ts,vue}"
      ],
      "rules": { "vue/multi-word-component-names": "off", "vue/no-use-v-if-with-v-for": "off" }
    }
  ]
}
